<h1>編集フォーム</h1>

<%= form_for @item, url: { action: 'update' } do |f| %>
 <p>
  商品名:<br>
  <%= f.text_field :name %>
 </p>

 <p>
  商品詳細:<br>
  <%= f.text_field :description %>
 </p>

 <p>
  価格:<br>
  <%= f.text_field :price %>
 </p>

 <p>
  売り手ID:<br>
  <%= f.text_field :seller_id %>
 </p>


<p>
  メールアドレス:<br>
  <%= f.text_field :email %>
 </p>


<p>
  イメージ画像:<br>
  <%= f.text_field :image_url %>
 </p>

 <%= f.submit '編集する'%>
<%= link_to '戻る', items_path %>
<% end %>
